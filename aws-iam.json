{
  "name": "IAM Key Rotation (Safe Import)",
  "nodes": [
    {
      "parameters": {},
      "name": "Start",
      "type": "n8n-nodes-base.start",
      "typeVersion": 1,
      "position": [200, 300]
    },
    {
      "parameters": {
        "values": {
          "string": [
            {
              "name": "UserName",
              "value": "demo-user"
            }
          ]
        }
      },
      "name": "Set User",
      "type": "n8n-nodes-base.set",
      "typeVersion": 2,
      "position": [400, 300]
    },
    {
      "parameters": {
        "operation": "listAccessKeys",
        "resource": "accessKey",
        "userName": "={{ $json.UserName }}"
      },
      "name": "List Access Keys",
      "type": "n8n-nodes-base.awsIam",
      "typeVersion": 1,
      "position": [600, 300],
      "credentials": {
        "aws": {
          "id": "REPLACE_WITH_YOUR_AWS_CRED_ID",
          "name": "AWS Credential"
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "dateTime": [
            {
              "value1": "={{ new Date($json.AccessKeyMetadata[0].CreateDate).getTime() }}",
              "operation": "smaller",
              "value2": "={{ Date.now() - (90 * 24 * 60 * 60 * 1000) }}"
            }
          ]
        }
      },
      "name": "Key Older than 90 Days?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [800, 300]
    },
    {
      "parameters": {
        "operation": "createAccessKey",
        "resource": "accessKey",
        "userName": "={{ $json.UserName }}"
      },
      "name": "Create New Access Key",
      "type": "n8n-nodes-base.awsIam",
      "typeVersion": 1,
      "position": [1000, 200],
      "credentials": {
        "aws": {
          "id": "REPLACE_WITH_YOUR_AWS_CRED_ID",
          "name": "AWS Credential"
        }
      }
    },
    {
      "parameters": {
        "channel": "#devops-alerts",
        "text": "âœ… IAM key rotated for *{{ $json.UserName }}*.\nNew Access Key ID: *{{ $json.AccessKey.AccessKeyId }}*"
      },
      "name": "Slack Notify",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [1200, 200],
      "credentials": {
        "slackApi": {
          "id": "REPLACE_WITH_SLACK_CRED_ID",
          "name": "Slack API"
        }
      }
    }
  ],
  "connections": {
    "Start": {
      "main": [["Set User"]]
    },
    "Set User": {
      "main": [["List Access Keys"]]
    },
    "List Access Keys": {
      "main": [["Key Older than 90 Days?"]]
    },
    "Key Older than 90 Days?": {
      "main": [["Create New Access Key", "true"]]
    },
    "Create New Access Key": {
      "main": [["Slack Notify"]]
    }
  }
}
